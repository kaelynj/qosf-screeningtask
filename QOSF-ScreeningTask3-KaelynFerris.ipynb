    "#Run example program\n",
    "\n",
    "#Define a few gates\n",
    "X = np.array([[0, 1],\n",
    "              [1, 0]])\n",
    "Z = np.array([[1,0],\n",
    "              [0,-1]])\n",
    "H = np.array([ [1/np.sqrt(2), 1/np.sqrt(2)],\n",
    "              [1/np.sqrt(2), -1/np.sqrt(2)] ])\n",
    "\n",
    "#Set the number of qubits and number of shots\n",
    "nqubit = 2\n",
    "nshots = 1000\n",
    "\n",
    "#Write our program\n",
    "prog = {\"gate\": [ H, X ], \"target\":[[0], [0,1]]}\n",
    "\n",
    "#Run circuit\n",
    "circuit_output = run_program(nqubit, prog)\n",
    "\n",
    "#Read results of circuit\n",
    "counts = get_counts(circuit_output, nqubit, nshots)\n",
    "print(counts)\n",
    "\n",
    "#Plot histogram of counts\n",
    "plot_histogram(counts)"
