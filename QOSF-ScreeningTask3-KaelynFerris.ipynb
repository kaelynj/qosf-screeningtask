    "#Imports\n",
    "import numpy as np\n",
    "import matplotlib.pyplot as plt\n",
    "import random as rnd\n",
    "\n",
    "######################################################################################\n",
    "#Initialize ground state of quantum computer.  Here we will use \"Big Endian\" encoding\n",
    "def initialize_qubits(num_qubits):\n",
    "    #The state of the computer is represented as a vector of size 2^(num_qubits)\n",
    "    state = np.zeros(2**num_qubits)\n",
    "    #Set the vector to the ground state which is 1. in the first element\n",
    "    state[0] = 1.\n",
    "    return state\n",
    "\n",
    "######################################################################################\n",
    "#Obtain circuit operator of size 2^(num_qubits)x2^(num_qubits) for a given gate\n",
    "def get_circuit_operator(total_qubits, gate_unitary, target_qubits):\n",
    "    \n",
    "    #First check if this is a single or multi-qubit gate\n",
    "    if len(target_qubits)==1:\n",
    "        \n",
    "        #Initialize our operator to either I or gate_unitary\n",
    "        # depending on target_qubit\n",
    "        if target_qubits[0] == 0:\n",
    "            O = gate_unitary\n",
    "        else:\n",
    "            O = np.identity(2)\n",
    "            \n",
    "        #Construct remainder of operator\n",
    "        for q in range(1, total_qubits):\n",
    "            if q==target_qubits[0]:\n",
    "                Otmp = gate_unitary\n",
    "            else:\n",
    "                Otmp = np.identity(2)\n",
    "            O = np.kron(O, Otmp)\n",
    "    \n",
    "    ##############################\n",
    "    \n",
    "    #Case for a multi-qubit gate\n",
    "    else:\n",
    "        proj_0 = np.array([[1,0],[0,0]])\n",
    "        proj_1 = np.array([[0,0],[0,1]])\n",
    "        ctrl = target_qubits[0]\n",
    "        trgt = target_qubits[1]\n",
    "        #Check if either control or target is the first qubit\n",
    "        if ctrl == 0:\n",
    "            O_1 = proj_0\n",
    "            O_2 = proj_1\n",
    "        elif trgt == 0:\n",
    "            O_1 = np.identity(2)\n",
    "            O_2 = gate_unitary\n",
    "        else:\n",
    "            O_1 = np.identity(2)\n",
    "            O_2 = np.identity(2)\n",
    "            \n",
    "        #Create the rest of the operator\n",
    "        for q in range(1, total_qubits):\n",
    "            if q==ctrl:\n",
    "                Otmp1 = proj_0\n",
    "                Otmp2 = proj_1\n",
    "            elif q==trgt:\n",
    "                Otmp1 = np.identity(2)\n",
    "                Otmp2 = gate_unitary\n",
    "            else:\n",
    "                Otmp1 = np.identity(2)\n",
    "                Otmp2 = np.identity(2)\n",
    "            #Apply tensor product\n",
    "            O_1 = np.kron(O_1, Otmp1)\n",
    "            O_2 = np.kron(O_2, Otmp2)\n",
    "        O = np.add(O_1, O_2)\n",
    "    return O\n",
    "    \n",
    "    \n",
    "    \n",
    "######################################################################################\n",
    "#Read in program, initialize computer state, execute circuit, return final state\n",
    "def run_program(nqubits, program):\n",
    "    \n",
    "    state = initialize_qubits(nqubits)\n",
    "    gates = program[\"gate\"]\n",
    "    targets = program[\"target\"]\n",
    "    circuit = []\n",
    "    #Populate list of circuit operators\n",
    "    for i in range(len(gates)):\n",
    "        circuit.append(get_circuit_operator(nqubits, gates[i], targets[i]))\n",
    "    \n",
    "    #Successively apply circuit operators onto computer state\n",
    "    for gate in circuit:\n",
    "        state = np.dot(gate, state)\n",
    "    return state\n",
    "\n",
    "\n",
    "######################################################################################\n",
    "#Measure a given state_vector by a weighted random function\n",
    "def measure_all(state_vector):\n",
    "    probs = np.abs(state_vector)\n",
    "    vals = np.arange(0,len(state_vector))\n",
    "    out = rnd.choices(vals, weights=probs, k=1)\n",
    "    return out[0]\n",
    "\n",
    "\n",
    "######################################################################################\n",
    "#Get the binary representation of a given integer with n number of bits to represent it with\n",
    "def get_bin(x, n=0):\n",
    "    return format(x, 'b').zfill(n)\n",
    "\n",
    "\n",
    "######################################################################################\n",
    "#Return the total counts for each state measured given num_shots number of shots\n",
    "def get_counts(state_vector, nqubits, num_shots):\n",
    "    counts = {}\n",
    "    for shot in range(num_shots):\n",
    "        shot_val = measure_all(state_vector)\n",
    "        shot_bin = get_bin(shot_val, nqubits)\n",
    "        if shot_bin in counts:\n",
    "            counts[shot_bin]+=1\n",
    "        else:\n",
    "            counts[shot_bin] = 1\n",
    "    return counts\n",
    "\n",
    "######################################################################################\n",
    "#Plot histogam of the given counts\n",
    "def plot_histogram(counts):\n",
    "    #Grab labels\n",
    "    xlabels = list(counts.keys())\n",
    "    #Get counts and normalize by total counts\n",
    "    vals = [x for x in list(counts.values()) ]\n",
    "    num_shots = np.sum(vals)\n",
    "    x = np.arange(len(vals))\n",
    "    vals = vals/num_shots\n",
    "    #Plot bar graph with state labels\n",
    "    plt.bar(x, height=vals)\n",
    "    plt.xticks(x, xlabels)\n",
    "    plt.show()\n",
    "    \n"
   ]
  },
